# Cloudflare Workers 配置模板
# 复制此文件为 wrangler.toml 并填写实际配置

name = "ai-daily"
main = "src/index.js"
compatibility_date = "2025-05-20"
workers_dev = true

# KV 命名空间
kv_namespaces = [
  { binding = "DATA_KV", id = "your_kv_namespace_id" }
]

[vars]
# ========================
# 基础功能配置
# ========================
IMG_PROXY = ""
OPEN_TRANSLATE = "true"

# ========================
# AI 模型配置
# ========================
# 可选值: "GEMINI" 或 "OPEN"
USE_MODEL_PLATFORM = "GEMINI"

# Gemini 配置
GEMINI_API_KEY = "your_gemini_api_key"
GEMINI_API_URL = "https://api-proxy.me/gemini"
DEFAULT_GEMINI_MODEL = "gemini-2.5-flash-preview-05-20"

# OpenAI 兼容 API 配置 (如 DeepSeek)
OPENAI_API_KEY = "your_openai_compatible_key"
OPENAI_API_URL = "https://api.deepseek.com"
DEFAULT_OPEN_MODEL = "deepseek-chat"

# ========================
# 内容源配置
# ========================
# Folo 源
FOLO_COOKIE_KV_KEY = "your_folo_cookie"
FOLO_DATA_API = "https://api.follow.is/entries"
FOLO_FILTER_DAYS = "7"

# 新闻聚合器 listId（支持多个，用逗号分隔）
NEWS_AGGREGATOR_LIST_ID = "158437828119024640"
NEWS_AGGREGATOR_FETCH_PAGES = "1"

# Folo 列表订阅源
FOLO_LIST_ID = "226452067576373248"
FOLO_LIST_FETCH_PAGES = "1"

# Huggingface 论文
HGPAPERS_LIST_ID = "158437917409783808"
HGPAPERS_FETCH_PAGES = "1"

# Twitter
TWITTER_LIST_ID = "153028784690326528"
TWITTER_FETCH_PAGES = "1"

# Reddit
REDDIT_LIST_ID = "167576006499975168"
REDDIT_FETCH_PAGES = "1"

# GitHub Trending
PROJECTS_API_URL = "https://git-trending.justlikemaki.vip/topone/?since=daily"

# ========================
# GitHub 发布配置
# ========================
GITHUB_TOKEN = "your_github_personal_access_token"
GITHUB_REPO_OWNER = "your_github_username"
GITHUB_REPO_NAME = "your_repo_name"
GITHUB_BRANCH = "main"

# ========================
# 认证配置
# ========================
LOGIN_USERNAME = "your_login_username"
LOGIN_PASSWORD = "your_login_password"

# ========================
# 其他配置
# ========================
DAILY_TITLE = "AI洞察日报"
DAILY_TITLE_MIN = " `AI 日报` "
PODCAST_TITLE = "来生小酒馆"
PODCAST_BEGIN = "嘿，亲爱的V，欢迎收听新一期的来生情报站，我是你们的老朋友，何夕2077"
PODCAST_END = "今天的情报就到这里，注意隐蔽，赶紧撤离"
BOOK_LINK = ""
INSERT_FOOT = "false"
INSERT_AD = "false"
INSERT_APP_URL = "<h3>[查看完整版AI日报↗️ https://ai.hubtoday.app/](https://ai.hubtoday.app/)</h3>"